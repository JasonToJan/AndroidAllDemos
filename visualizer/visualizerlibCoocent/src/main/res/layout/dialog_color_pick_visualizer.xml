<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dcpv_color_picker_rl"
    android:clickable="true"
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    tools:context=".test.TestFragementActivity">

    <TextView
        android:id="@+id/dcpv_negativeButton"
        style="@style/text_15_666666_sdw"
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_toLeftOf="@+id/dcpv_positiveButton"
        android:layout_marginRight="10dp"
        android:text="@string/cancel"
        android:layout_toStartOf="@+id/dcpv_positiveButton"
        android:layout_marginEnd="10dp" />

    <TextView
        android:id="@+id/dcpv_positiveButton"
        style="@style/text_15_ffffff_sdw"
        android:background="?android:attr/selectableItemBackground"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginLeft="8dp"
        android:text="@string/ok"
        android:layout_marginStart="8dp" />

</RelativeLayout>